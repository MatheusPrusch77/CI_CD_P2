{
  "name": "api-ada-company-nestjs",
  "version": "1.0.0",
  "description": "API para gerenciamento de servi√ßos da ADA Company",
  "author": "Matheus",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:run": "npx sequelize-cli db:migrate",
    "migration:undo": "npx sequelize-cli db:migrate:undo",
    "migration:undo:all": "npx sequelize-cli db:migrate:undo:all",
    "seed:run": "npx sequelize-cli db:seed:all",
    "seed:undo": "npx sequelize-cli db:seed:undo",
    "seed:undo:all": "npx sequelize-cli db:seed:undo:all",
    "db:clean": "rm -f database.sqlite && npm run build",
    "db:reset": "npm run db:clean && npm run db:migrate && npm run db:seed",
    "db:migrate": "npx sequelize-cli db:migrate --env development --migrations-path=src/database/migrations --config=src/database/config.js",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo --env development --migrations-path=src/database/migrations --config=src/database/config.js",
    "db:migrate:undo:all": "npx sequelize-cli db:migrate:undo:all --env development --migrations-path=src/database/migrations --config=src/database/config.js",
    "db:seed": "npm run build && npx sequelize-cli db:seed:all --env development --seeders-path=src/database/seeders --config=src/database/config.js",
    "db:seed:undo": "npm run build && npx sequelize-cli db:seed:undo --env development --seeders-path=src/database/seeders --config=src/database/config.js",
    "db:seed:undo:all": "npm run build && npx sequelize-cli db:seed:undo:all --env development --seeders-path=src/database/seeders --config=src/database/config.js",
    "db:create:migration": "npx sequelize-cli migration:generate --name",
    "db:create:seed": "npx sequelize-cli seed:generate --name",
    "migrate": "npx -r ts-node/register sequelize-cli db:migrate --config src/infrastructure/database/config.js"
  },
  "dependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.2",
    "@nestjs/sequelize": "^11.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@types/passport-jwt": "^4.0.1",
    "axios": "^1.10.0",
    "bcrypt": "^5.1.1",
    "chrome-launcher": "^1.2.0",
    "chromium": "^3.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.0",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "sqlite3": "^5.1.7",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-transport": "^4.9.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^11.1.1",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "sequelize-cli": "^6.6.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    }
  }
}
